<h1>{{#if post}}编辑文章{{else}}创建文章{{/if}}</h1>

<form action="/admin/posts/save" method="POST" enctype="multipart/form-data">
    {{#if post}}
        <input type="hidden" name="id" value="{{post.id}}">
    {{/if}}
    
    <div class="form-group">
        <label class="form-label" for="title">标题 *</label>
        <input type="text" id="title" name="title" class="form-input" value="{{post.title}}" required>
    </div>
    
    <div class="form-group">
        <label class="form-label" for="excerpt">摘要</label>
        <textarea id="excerpt" name="excerpt" class="form-textarea">{{post.excerpt}}</textarea>
    </div>
    
    <div class="form-group">
        <label class="form-label" for="content">内容 *</label>
        <div id="editor—wrapper">
            <div id="toolbar-container"><!-- 工具栏 --></div>
            <div id="editor-container"><!-- 编辑器 --></div>
        </div>
        <textarea id="content" name="content" style="display: none;">{{post.content}}</textarea>
    </div>
    
    <div class="form-group">
        <label class="form-label" for="category">分类</label>
        <input type="text" id="category" name="category" class="form-input" value="{{post.category}}" list="categories">
        <datalist id="categories">
            <option value="技术">
            <option value="生活">
            <option value="学习">
            <option value="分享">
        </datalist>
    </div>
    
    <div class="form-group">
        <label class="form-label" for="tags">标签 (用逗号分隔)</label>
        <input type="text" id="tags" name="tags" class="form-input" value="{{#if post.tags}}{{post.tags}}{{/if}}">
    </div>
    
    <div class="form-group">
        <label class="form-label" for="featuredImage">特色图片</label>
        {{#if post.featured_image}}
            <img src="{{post.featured_image}}" alt="当前图片" style="max-width: 200px; margin-bottom: 1rem;">
        {{/if}}
        <input type="file" id="featuredImage" name="featuredImage" class="form-input">
    </div>
    
    <div class="form-group">
        <label class="form-label" for="status">状态</label>
        <select id="status" name="status" class="form-select">
            <option value="draft" {{#if (or (eq post.status 'draft') (not post))}}selected{{/if}}>草稿</option>
            <option value="published" {{#if (eq post.status 'published')}}selected{{/if}}>已发布</option>
        </select>
    </div>
    
    <div style="display: flex; gap: 1rem; margin-top: 2rem;">
        <button type="submit" class="btn btn-primary">保存文章</button>
        <a href="/admin/posts" class="btn">取消</a>
    </div>
</form>

<style>
    #editor—wrapper {
        border: 1px solid #ccc;
        border-radius: 4px;
        overflow: hidden;
        margin-bottom: 1rem;
    }
    #toolbar-container {
        border-bottom: 1px solid #ccc;
    }
    #editor-container {
        min-height: 400px;
    }
    .w-e-text-container [data-slate-editor] p {
        margin: 0;
    }
</style>

<!-- 引入 wangEditor JS -->
<script src="https://unpkg.com/@wangeditor-next/editor@latest/dist/index.js"></script>
<script>
    // 初始化 wangEditor
    document.addEventListener('DOMContentLoaded', function() {
        // 获取内容区域
        const contentTextarea = document.getElementById('content');
        const initialContent = contentTextarea.value || '';
        
        // 创建编辑器
        const editorConfig = {
            placeholder: '请输入内容...',
            onChange(editor) {
                const html = editor.getHtml();
                contentTextarea.value = html;
            }
        };
        
        // 创建工具栏
        const toolbarConfig = {};
        
        // 初始化编辑器
        window.editor = wangEditor.createEditor({
            selector: '#editor-container',
            config: editorConfig,
            html: initialContent,
            mode: 'default' // 或 'simple'
        });
        
        // 创建工具栏
        window.toolbar = wangEditor.createToolbar({
            editor: window.editor,
            selector: '#toolbar-container',
            config: toolbarConfig,
            mode: 'default' // 或 'simple'
        });
        
        // 表单提交前确保内容已同步
        const form = document.querySelector('form');
        form.addEventListener('submit', function() {
            if (window.editor) {
                contentTextarea.value = window.editor.getHtml();
            }
        });
    });
</script>