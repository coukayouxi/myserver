<h1>{{#if post}}编辑文章{{else}}创建文章{{/if}}</h1>

<form action="/admin/posts/save" method="POST" enctype="multipart/form-data">
    {{#if post}}
        <input type="hidden" name="id" value="{{post.id}}">
    {{/if}}
    
    <!-- ... 其他表单字段保持不变 ... -->
    
    <div class="form-group">
        <label class="form-label" for="content">内容 *</label>
        <textarea id="content" name="content">{{post.content}}</textarea>
    </div>

    <!-- ... 其他表单字段和按钮保持不变 ... -->
</form>

<!-- 引入 EasyMDE CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/easymde/dist/easymde.min.css">

<style>
    .CodeMirror, .CodeMirror-scroll {
        min-height: 400px;
    }
    .editor-toolbar {
        border-radius: 4px 4px 0 0;
        border: 1px solid #ddd;
        border-bottom: none;
    }
    .CodeMirror {
        border-radius: 0 0 4px 4px;
        border: 1px solid #ddd;
    }
    /* 确保预览区域样式良好 */
    .editor-preview, .editor-preview-side {
        background-color: #fafafa;
        padding: 10px 20px;
        overflow-y: auto;
    }
    .editor-preview img, .editor-preview-side img {
        max-width: 100%;
        height: auto;
    }
    /* 代码块样式 */
    .editor-preview pre, .editor-preview-side pre,
    .editor-preview code, .editor-preview-side code {
        background-color: #f5f5f5;
        border-radius: 4px;
    }
    .editor-preview pre, .editor-preview-side pre {
        padding: 10px;
        overflow-x: auto;
    }
    .editor-preview code, .editor-preview-side code {
        padding: 2px 4px;
        font-family: 'Courier New', monospace;
    }
</style>

<!-- 引入 EasyMDE JS -->
<script src="https://cdn.jsdelivr.net/npm/easymde/dist/easymde.min.js"></script>
<script>
    // 初始化 EasyMDE
    document.addEventListener('DOMContentLoaded', function() {
        const easyMDE = new EasyMDE({
            element: document.getElementById('content'),
            autosave: {
                enabled: false, // 暂时禁用自动保存，避免冲突
                // enabled: true,
                // uniqueId: "edit-post-{{#if post}}{{post.id}}{{else}}new{{/if}}",
                // delay: 1000,
            },
            minHeight: "400px",
            // 配置工具栏，确保包含预览按钮
            toolbar: [
                "bold", "italic", "strikethrough", "heading", "|",
                "quote", "unordered-list", "ordered-list", "code", "table", "|",
                "link", "image", "horizontal-rule", "|",
                "preview", "side-by-side", "fullscreen", "|", // 这三个就是预览相关的按钮
                "guide"
            ],
            // 启用预览渲染
            previewRender: function(plainText) {
                // EasyMDE 内部使用 marked 库进行渲染，这里可以自定义或使用默认
                return this.parent.markdown(plainText);
            },
            renderingConfig: {
                codeSyntaxHighlighting: false, // 如果想启用代码高亮，需要引入 highlight.js 相关库
            },
            spellChecker: false, // 禁用拼写检查，避免浏览器干扰
            // forceSync: true, // 强制同步到 textarea，通常不需要
        });

        // 为了确保表单提交时内容是最新的，可以在提交时手动同步
        const form = document.querySelector('form');
        if (form) {
            form.addEventListener('submit', function() {
                // EasyMDE 通常会自动保持 textarea 同步，
                // 但显式调用一次更保险
                const markdownContent = easyMDE.value();
                document.getElementById('content').value = markdownContent;
            });
        }
    });
</script>